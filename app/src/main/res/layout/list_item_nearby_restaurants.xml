<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/nearby_restaurants_list_icon_size"
                android:layout_height="@dimen/nearby_restaurants_list_icon_size"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:src="@drawable/img_ad_1" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_12"
                android:layout_toRightOf="@id/iv_icon"
                android:lines="1"
                android:singleLine="true"
                android:text="Loreum ipsum"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_size_xs" />

            <TextView
                android:id="@+id/tv_cusines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/iv_icon"
                android:lines="1"
                android:singleLine="true"
                android:text="Loreum ipsum"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_size_xxs" />

            <TextView
                android:id="@+id/tv_offers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_cusines"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_toRightOf="@id/iv_icon"
                android:drawableLeft="@drawable/ic_offers_red"
                android:drawablePadding="@dimen/margin_4"
                android:lines="1"
                android:singleLine="true"
                android:text="10% off on all items"
                android:textColor="@color/colorRedText"
                android:textSize="@dimen/text_size_xxs" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_offers"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_toRightOf="@id/iv_icon"
                android:background="@color/colorBg" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_toRightOf="@id/iv_icon"
                android:drawableLeft="@drawable/ic_star_grey_12"
                android:drawablePadding="@dimen/margin_4"
                android:lines="1"
                android:singleLine="true"
                android:text="3.6"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_size_xxs" />

            <TextView
                android:id="@+id/tv_min_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/divider"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_4"
                android:lines="1"
                android:singleLine="true"
                android:text="minimum order 200"
                android:textColor="@color/colorSecondaryText"
                android:textSize="@dimen/text_size_xxs" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>